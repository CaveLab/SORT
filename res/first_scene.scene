<Root>
  <Resource path="../res/"/>
  <Material value="default.material"/>
	<Model filename="teapot.obj">
		<Transform>
	  <Matrix value="s 30"/>
		</Transform>
	</Model>
  <Light type="point">
    <Transform>
      <Matrix value="t 100 100 1500"/>
    </Transform>
    <Property name="intensity" value="9000000 0 1"/>
  </Light>
  <Light type="point">
    <Transform>
      <Matrix value="t 1500 100 100"/>
    </Transform>
    <Property name="intensity" value="0 9000000 1"/>
  </Light>
  <Light type="spot">
    <Transform>
      <Matrix value="r 0 -3"/>
      <Matrix value="r 1 -1.14"/>
      <Matrix value="t 0 1500 0"/>
    </Transform>
    <Property name="intensity" value="0 0 9000000"/>
    <Property name="falloff_start" value="0.1" />
    <Property name="range" value="0.4"/>
  </Light>
	<Accel type="bvh"/>
  <Sky type="sky_sphere">
    <Property name="image" value="sky/mars.bmp"/>
  </Sky>
  <Sky type="sky_box">
    <Property name="up" value="sky/lobbyypos.bmp"/>
    <Property name="down" value="sky/lobbyyneg.bmp" />
    <Property name="front" value="sky/lobbyxpos.bmp"/>
    <Property name="back" value="sky/lobbyxneg.bmp"/>
    <Property name="left" value="sky/lobbyzpos.bmp"/>
    <Property name="right" value="sky/lobbyzneg.bmp"/>
  </Sky>
</Root>
